<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <%= link_to "Bounty Hunter", root_path, class: "-m-1.5 p-1.5" %>

    <div class="flex lg:hidden">
      <button id="open_menu" type="button" class="border-0 hover:bg-transparent cursor-pointer -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>

        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <% if current_user %>
        <%= link_to "Browse",
          bounties_path,
          class: "text-sm/6 font-semibold text-gray-900" %>

        <%= link_to "Post",
          new_bounty_path,
          class: "text-sm/6 font-semibold text-gray-900" %>

        <%= link_to "Edit Profile",
          edit_user_path(current_user),
          class: "text-sm/6 font-semibold text-gray-900" %>

        <%= link_to "Log out",
          logout_path,
          class: "text-sm/6 font-semibold text-gray-900",
          data: { turbo_prefetch: false } %>
      <% else %>
        <%= link_to login_path, class: "text-sm/6 font-semibold text-gray-900" do %>
          Log in <span aria-hidden="true">&rarr;</span>
        <% end %>
      <% end %>
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="menu" class="hidden lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>

    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <%= link_to "Bounty Hunter", root_path, class: "-m-1.5 p-1.5" %>

        <button id="close_menu" type="button" class="border-0 hover:bg-transparent cursor-pointer -m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>

          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <% if current_user %>
            <div class="space-y-2 py-6">
              <%= link_to "Browse",
                bounties_path,
                class: "-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>

              <%= link_to "Post",
                new_bounty_path,
                class: "-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>

              <%= link_to "Edit Profile",
                edit_user_path(current_user),
                class: "-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
            </div>
          <% end %>

          <div class="py-6">
            <% if current_user %>
              <%= link_to "Log out",
                logout_path,
                class: "-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50",
                data: { turbo_prefetch: false } %>
            <% else %>
              <%= link_to "Log in",
                login_path,
                class: "-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
